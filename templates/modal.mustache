{{!
    @template codehl_tiny/modal

    Modal to manage an Equation within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
        'elementid': 'exampleId',
        'texdocsurl': 'http://abc.com',
        'equation': '\\Downarrow ',
        'delimiters': {
            'start': '',
            'end': ''
        },
        'libraries': {
            'group1': [
                '\\Downarrow '
            ]
        }
    }
}}
{{< core/modal }}

    {{$title}}
        {{#str}} modaltitle, codehl_tiny {{/str}}
    {{/title}}

    {{$body}}
        <form class='mform' id='{{uniqid}}''>
            <label for='{{elementid}}_codehl_tiny'>{{#str}} editcode, codehl_tiny{{/str}}</label>
            <textarea class='fullwidth text-ltr w-100' id='{{elementid}}_codehl_tiny' rows='8'>{{equation}}</textarea>
            <fieldset>
            <legend>{{#str}}legend, tiny_codehighlighter{{/str}}</legend>
            <label for='{{elementid}}_codehl_tiny_langugage'>{{#str}}selectlanguage, codehl_tiny{{/str}}</label>
            <select name='{{elementid}}_codehl_tiny_langugage' id='{{elementid}}_codehl_tiny_langugage'>
            <option value='cpp'>C/C++</option>
            <option value='python'>Python</option>
            <option value='shell'>Shell</option>
            <option value='php'>PHP</option>
            </select><br/>
            <label for='{{elementid}}_codehl_tiny_linesnumbers'>{{#str}}linesnumbers, codehl_tiny{{/str}}</label>
            <input type='checkbox' name='{{elementid}}_codehl_tiny_linesnumbers' checked>
            </fieldset>
        </form>

    {{/body}}

    {{$footer}}
        <button type='button' class='btn btn-primary' id='save_codehl_tiny' data-action='save'>{{#str}} savecode, codehl_tiny{{/str}}</button>
    {{/footer}}

{{/ core/modal }}
